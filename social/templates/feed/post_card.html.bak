
<article class="relative mb-6 group break-inside-avoid" x-data="{ liked: false, likesCount: {{ post.likes.count|default:0 }} }">
    <div class="p-5 transition-transform duration-300 glass-panel rounded-3xl hover:-translate-y-1">
        
        <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
                <a href="{% url 'yourlife_social:profile_detail' post.author.username %}" class="relative cursor-pointer">
                    <img src="{{ post.author.profile_image.url }}" class="object-cover w-12 h-12 rounded-full ring-2 ring-white/50">
                </a>
                <div>
                    <a href="{% url 'yourlife_social:profile_detail' post.author.username %}" class="font-bold transition-colors text-slate-800 hover:text-violet-600">
                        {{ post.author.get_full_name }}
                    </a>
                    <p class="text-xs text-slate-500">{{ post.created_at|timesince }} atr√°s</p>
                </div>
            </div>
            <button class="p-2 rounded-full text-slate-400 hover:bg-slate-100">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path></svg>
            </button>
        </div>

        <div class="mb-4 leading-relaxed text-slate-700">
            {{ post.content|linebreaksbr }}
        </div>

        {% if post.image %}
        <div class="mb-4 overflow-hidden border rounded-2xl border-white/50">
            <img src="{{ post.image.url }}" class="object-cover w-full h-auto">
        </div>
        {% endif %}

        <div class="flex items-center justify-between pt-3 border-t border-slate-100/50">
            <button @click="liked = !liked; liked ? likesCount++ : likesCount--" :class="liked ? 'text-rose-500 bg-rose-50' : 'text-slate-500 hover:bg-slate-50'" class="flex items-center gap-2 px-4 py-2 transition-all rounded-xl">
                <svg :class="liked ? 'fill-current' : ''" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
                <span x-text="likesCount" class="text-sm font-bold"></span>
            </button>
            <button class="flex items-center gap-2 px-4 py-2 transition-all rounded-xl text-slate-500 hover:text-violet-600 hover:bg-violet-50">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
                <span class="text-sm font-medium">Comentar</span>
            </button>
            <button class="flex items-center gap-2 px-4 py-2 transition-all rounded-xl text-slate-500 hover:text-blue-600 hover:bg-blue-50">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path></svg>
            </button>
        </div>
    </div>
</article>
